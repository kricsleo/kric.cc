---
import { ViewTransitions } from 'astro:transitions'
import '@fontsource/barlow/400.css'
import '@kricsleo/markdown-themes'
import '../styles/global.scss'
import Header from '../components/Header.astro'
import LoadingIndicator from '../components/LoadingIndicator.astro'

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Kricsleo's blog" />
		<meta name="viewport" content="width=device-width,initial-scale=1">
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body class="bg min-h-100vh flex flex-col">
		<LoadingIndicator transition:persist="loading" />
		<Header />
		<slot />
	</body>
</html>